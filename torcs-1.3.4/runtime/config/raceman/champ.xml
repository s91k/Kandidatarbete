<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE params SYSTEM "params.dtd">


<params name="Championship">
  <section name="Header">
    <attstr name="name" val="Championship"/>
    <attstr name="description" val="Championship"/>
    <attnum name="priority" val="30"/>
    <attstr name="menu image" val="data/img/splash-dtm.png"/>
    <attstr name="run image" val="data/img/splash-run-practice.png"/>
    <attstr name="start image" val="data/img/splash-dtm.png"/>
  </section>

  <section name="Tracks">
    <attnum name="maximum number" val="20"/>
    <section name="1">
      <attstr name="name" val="g-track-1"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="2">
      <attstr name="name" val="e-track-6"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="3">
      <attstr name="name" val="g-track-3"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="4">
      <attstr name="name" val="street-1"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="5">
      <attstr name="name" val="wheel-2"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="6">
      <attstr name="name" val="ruudskogen"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="7">
      <attstr name="name" val="aalborg"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="8">
      <attstr name="name" val="alpine-1"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="9">
      <attstr name="name" val="dirt-3"/>
      <attstr name="category" val="dirt"/>
    </section>

    <section name="10">
      <attstr name="name" val="michigan"/>
      <attstr name="category" val="oval"/>
    </section>

    <section name="11">
      <attstr name="name" val="forza"/>
      <attstr name="category" val="road"/>
    </section>

    <section name="12">
      <attstr name="name" val="alpine-2"/>
      <attstr name="category" val="road"/>
    </section>

  </section>

  <section name="Races">
    <section name="1">
      <attstr name="name" val="Qualifications"/>
    </section>

    <section name="2">
      <attstr name="name" val="Race"/>
    </section>

  </section>

  <section name="Qualifications">
    <attnum name="laps" val="3"/>
    <attstr name="type" val="qualifications"/>
    <attstr name="starting order" val="drivers list"/>
    <attstr name="display mode" val="results only"/>
    <attstr name="restart" val="no"/>
    <attstr name="display results" val="yes"/>
    <attstr name="must complete" val="yes"/>
    <section name="Starting Grid">
      <attnum name="rows" val="1"/>
      <attnum name="distance to start" val="100"/>
      <attnum name="distance between columns" val="20"/>
      <attnum name="offset within a column" val="10"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

  </section>

  <section name="Race">
    <attnum name="distance" unit="km" val="180"/>
    <attstr name="type" val="race"/>
    <attstr name="starting order" val="last race"/>
    <attstr name="restart" val="no"/>
    <attnum name="maximum drivers" val="40"/>
    <attstr name="splash menu" val="yes"/>
    <section name="Starting Grid">
      <attnum name="rows" val="2"/>
      <attnum name="distance to start" val="25"/>
      <attnum name="distance between columns" val="30"/>
      <attnum name="offset within a column" val="10"/>
      <attnum name="initial speed" val="0"/>
      <attnum name="initial height" val="0.2"/>
    </section>

    <section name="Points">
      <section name="1">
        <attnum name="points" val="10"/>
      </section>

      <section name="2">
        <attnum name="points" val="8"/>
      </section>

      <section name="3">
        <attnum name="points" val="6"/>
      </section>

      <section name="4">
        <attnum name="points" val="5"/>
      </section>

      <section name="5">
        <attnum name="points" val="4"/>
      </section>

      <section name="6">
        <attnum name="points" val="3"/>
      </section>

      <section name="7">
        <attnum name="points" val="2"/>
      </section>

      <section name="8">
        <attnum name="points" val="1"/>
      </section>

    </section>

  </section>

  <section name="Drivers">
    <attnum name="maximum number" val="50"/>
    <attstr name="focused module" val="inferno"/>
    <attnum name="focused idx" val="7"/>
    <section name="1">
      <attnum name="idx" val="6"/>
      <attstr name="module" val="berniw"/>
    </section>

    <section name="2">
      <attnum name="idx" val="3"/>
      <attstr name="module" val="inferno"/>
    </section>

    <section name="3">
      <attnum name="idx" val="7"/>
      <attstr name="module" val="damned"/>
    </section>

    <section name="4">
      <attnum name="idx" val="4"/>
      <attstr name="module" val="bt"/>
    </section>

    <section name="5">
      <attnum name="idx" val="7"/>
      <attstr name="module" val="berniw2"/>
    </section>

    <section name="6">
      <attnum name="idx" val="4"/>
      <attstr name="module" val="lliaw"/>
    </section>

    <section name="7">
      <attnum name="idx" val="1"/>
      <attstr name="module" val="berniw_Recorder"/>
    </section>

  </section>

  <section name="Configuration">
    <attnum name="current configuration" val="2"/>
    <section name="1">
      <attstr name="type" val="drivers select"/>
    </section>

  </section>

</params>
